#simp09#
BEGIN # "In situ" permutation#
      PROC permvec = (REF [] INT vec, [] INT p) VOID:
           FOR j TO UPB p 
           DO INT k := p[j];
              
              WHILE k > j
              DO k := p[k]
              OD;
              IF k = j
              THEN INT h = vec[j],
                   INT l := p[k];
                   
                   WHILE l NE j
                   DO vec[k] := vec[l];
                      k := l;
                      l := p[k]
                   OD;
                   vec[k] := h
              FI
           OD,
      [1 : 5] INT x := (4, 5, 1, 3, 2);
      
      print (("Output: 1 2 3 4 5 ", newline));
      print ((permvec (x, (3, 5, 4, 1, 2));
              x))
END