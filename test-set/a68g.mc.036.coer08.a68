PR quiet PR

#coer08#
BEGIN # Soft balance # print ((HEAP REAL x := 3.14;
                               
                               CASE 3
                               IN SKIP, IF x < 0
                                  THEN GOTO stop
                                  ELSE REF [] REAL: NIL
                                  FI, IF x > 0
                                  THEN x
                                  ELSE x +:= 1
                                  FI
                               ESAC := pi)[1])
# 3.14159265...#
END