PROC sierpinski = (INT n) [] STRING: 
  (FLEX [1] STRING d := "*";
   FOR i TO n 
   DO [2 * UPB d] STRING next;
     FOR k TO UPB d 
     DO next[k] := 2 ^ (i - 1) * blank + d[k] + 2 ^ (i - 1) * blank;
        next[UPB d + k] := d[k] + blank + d[k]
     OD;
     d := next
   OD;
   d
  );

printf(($gl$,sierpinski(4)))
