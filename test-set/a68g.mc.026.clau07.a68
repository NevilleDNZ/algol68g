PR quiet PR

#clau07#
BEGIN # If-, case- and ucase-clauses #
      FOR i 
      DO print (((i = 1 | 1 |: i = 2 | 2 |: i = 3 | 3 | eo if), newline))
      OD;
      eo if:
      FOR i 
      DO print (((i | 4, 5 |: i - 2 | 6, 7 | eo case), newline))
      OD;
      eo case:
      FOR i 
      DO print (((UNION (INT, REAL, CHAR, STRING, BOOL) (i | 1, 1.0, "a", "", TRUE) | (INT): 8, (REAL): 9 |: UNION (CHAR, STRING, BOOL) (i - 2 | "a", "", TRUE) | (CHAR): 10, (STRING): 11 | eo ucase), newline))
      OD;
      eo ucase: SKIP
END