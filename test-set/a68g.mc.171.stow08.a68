PR quiet PR

#stow08#
BEGIN # Test king size indices and midget slices #
      INT i := 0;
      
      WHILE i <= (maxint - 1) OVER 2
      DO INT maxdex = i := 2 * i + 1;
         
         INT mindex = -maxdex;
         
         print ((newline, "Bounds:           ", maxdex, mindex, newline));
         [maxdex : maxdex] REAL maxvec;
         
         maxvec[maxdex] := 1;
         print (("Bounds of maxvec: ", LWB maxvec, UPB maxvec, newline));
         [mindex : mindex] REAL minvec;
         
         minvec[mindex] := 1;
         print (("Bounds of minvec: ", LWB minvec, UPB minvec, newline));
         HEAP [maxdex : mindex] REAL flatvec;
         
         print (("Bounds of flatvec:", LWB flatvec, UPB flatvec, newline));
         REF [] REAL u := flatvec;
         
         HEAP [1] REAL v;
         
         v[LWB u : UPB u@LWB u] := u
      OD
END