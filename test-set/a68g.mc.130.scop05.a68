PR quiet PR

#scop05#

# No scope error #
([8] REF [] INT a;
 
 FOR i TO UPB a 
 # non-local #
 WHILE PRIO + = 3;
       
       TRUE
 # non-local #
 DO # non-local #
    CASE UNION (INT, REAL) (i)
    # non-local #
    IN (INT k): 
       # non-local #
       BEGIN l:  # non-local # a[k] := LOC [k] INT;
             FOR i TO k 
             DO a[k][i] := k + i
             OD
       END
    ESAC
 OD;
 print (("A triangle of integers, ascending downwards and to the right", newline));
 FOR i TO UPB a 
 DO print ((a[i], newline))
 OD)